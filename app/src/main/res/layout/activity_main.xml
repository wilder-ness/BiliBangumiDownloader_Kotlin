<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_fragment_bangumi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_fragment_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <com.wonderkiln.blurkit.BlurLayout
        android:id="@+id/nav_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        app:blurRadius="25"
        app:fps="60"
        app:downscaleFactor="0.5">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_gradient" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:id="@+id/nav_bangumi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackgroundBorderless"
                android:orientation="vertical"
                android:gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/nav_bangumi_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bangumi"
                    android:layout_gravity="center_horizontal"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="@string/title_bangumi"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:id="@+id/nav_bangumi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_bangumi"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/nav_mine"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackgroundBorderless"
                android:orientation="vertical"
                android:gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/nav_mine_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mine"
                    android:layout_gravity="center_horizontal"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="@string/title_mine"
                    tools:ignore="NestedWeights" />
                <TextView
                    android:id="@+id/nav_mine_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_mine"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </com.wonderkiln.blurkit.BlurLayout>

</FrameLayout>
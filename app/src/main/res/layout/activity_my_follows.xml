<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_follows_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:fitsSystemWindows="true" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/my_follows_tab"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:visibility="visible"
            android:clipToPadding="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:stl_defaultTabTextColor="@color/colorPrimary"
            app:stl_defaultTabTextHorizontalPadding="18dp"
            app:stl_dividerColor="@color/colorTransparent"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="@color/colorCompat"
            app:stl_indicatorCornerRadius="18dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="36dp"
            app:stl_underlineColor="@color/colorTransparent"
            app:stl_underlineThickness="0dp"/>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/my_follows_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginTop="48dp"
            android:paddingTop="4dp"
            android:overScrollMode="never"/>
    </FrameLayout>
</LinearLayout>